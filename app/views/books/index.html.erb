<p id="notice"></p>


  <h1>Books</h1>

  <% @books.each do |book| %>

    <p>Title</p>
    <span><%= link_to book.title, book_path(book.id) %></span>

  <% end %>

  <h2>New book</h2>
  <!-- form_with部分 -->
  <%= form_with model: @book do |f| %>

  <!-- メッセージ表示 -->
  <div class="flash-notifications">
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: key) %>
    <% end %>
  </div>



  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>